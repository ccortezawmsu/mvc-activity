@model Again.Areas.security.Models.UserModel


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class=" row content-header">
    <div class=" col-md-6">
        <h2>Details</h2>
    </div>
    <div class=" col-md-6 content-action">
        <br /><br />
        <a href="@Url.Action("Index")" class="btn btn-success">
            <span class="glyphicon glyphicon-arrow-left"></span>
            Back to List
        </a>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-info">
            <span class="glyphicon glyphicon-pencil"></span>
            Edit
        </a>
    </div>
</header>

<div>
    
    <div class="dl-horizontal">


        <img src="@Url.Content("~/Images/Unknown.jpg")" class="img-rounded resize" />


        <br>
        <h3>@Html.DisplayFor(model => model.LastName)</h3>
        <br />
        @Html.DisplayFor(model => model.FirstName)
        <br>
        <br />
        @Html.DisplayFor(model => model.Age) years old
        <br>
        <br />
        @Html.DisplayFor(model => model.Gender)
        <br>
        <br />
        @Html.DisplayFor(model => model.EmploymentDate)
    </div>
</div>


